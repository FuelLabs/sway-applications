{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": [".env", ".env.production", ".env.test"],
    "globalEnv": ["NODE_ENV"],
    "pipeline": {
      "ts:check": {
        "outputs": ["./**/*.typegen.ts"]
      },
      "build": {
        "dependsOn": ["ts:check"],
        "outputs": ["dist/**"]
      },
      "build:preview": {
        "dependsOn": ["^ts:check"],
        "outputs": ["dist/**", "./next/**"],
        "cache": false
      },
      "dev": {
        "dependsOn": ["^ts:check"],
        "cache": false
      },
      "start": {
        "cache": false
      }
    }
  }
  